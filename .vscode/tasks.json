// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
// The following structure is based on and advice here:
// https://github.com/Microsoft/vscode/issues/981
{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "command": "sh",
    "args": [ "-c" ],
    "tasks": [
        {
            "taskName": "build",
            "suppressTaskName": true,
            "args": ["tsc -p ."]
        },
        {
            "taskName": "test",
            "suppressTaskName": true,
            "args": ["npm test"]
        }
    ]
}